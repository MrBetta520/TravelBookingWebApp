@model Travel_V1.Models.Flight

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container border border-dark border-2 rounded my-5">
        <div class="row">
            <div class="col m-3">
                <h4 class="text-center">Flights</h4>
            </div>
        </div>
            <form asp-action="MatchedFlights" asp-controller="Flight">
                <div class="form-group form-floating ">
                    <div class="row">
                    <input asp-for="DepartureCity" class="form-control m-auto col-5" placeholder="Departure City" />
                    <span asp-validation-for="DepartureCity" class="text-danger"></span>

                    <input asp-for="ArrivalCity" class="form-control m-auto col-5" placeholder="Arrival City" />
                    <span asp-validation-for="ArrivalCity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                   <input type="submit" value="Search" class="btn btn-primary m-3" />
                </div>
            </form>
    </div>
    <img src="~/images/travel.jpg" alt="cancun" width=100% height=500px rounded my-5/>
    
</div>
@await Html.PartialAsync("_Footer")